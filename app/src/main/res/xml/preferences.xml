<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/app_category">

        <SwitchPreference
            android:defaultValue="true"
            android:key="is_service_enabled"
            android:summaryOff="@string/service_off_summary"
            android:summaryOn="@string/service_on_summary"
            android:title="Service status" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/general_category">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="send_notification"
            android:summary="@string/notification_pref_summary"
            android:title="@string/notification_pref_title" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:dependency="vibration_frequency_pref"
            android:key="military_time_pref"
            android:summary="@string/military_time_summary"
            android:title="@string/military_time" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="exact_time_pref"
            android:summary="@string/exact_pref_summary"
            android:title="@string/exact_pref_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/vibration_category">

        <com.enayet.bendroid.numberSeekerPreference
            android:defaultValue="50"
            android:inputType="number"
            android:key="vibration_pref"
            android:summary="@string/vibration_intensity_summary"
            android:title="@string/vibration_intensity"
            />


        <CheckBoxPreference
            android:disableDependentsState="true"
            android:key="vibration_frequency_pref"
            android:summary="@string/vibration_frequency_summary"
            android:title="@string/vibration_frequency" />


    </PreferenceCategory>

</PreferenceScreen>